<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ui.activity.ViewFilmActivity">

    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:id="@+id/cv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_film_name"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_rate"
                    android:layout_toRightOf="@id/tv_film_name"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_genres"
                    android:layout_below="@+id/tv_film_name"
                    android:layout_width="wrap_content"
                    android:text="Genres:"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_genres_list"
                    android:layout_below="@id/tv_genres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/films_list_item"/>
            <TextView
                    android:id="@+id/tv_adult"
                    android:textSize="14sp"
                    android:layout_below="@id/rv_genres_list"
                    android:layout_width="wrap_content"
                    android:text="Adult: "
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:id="@+id/cv_overview"
            android:layout_below="@id/cv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/tv_release_date"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textSize="14sp"
                    android:id="@+id/tv_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:id="@+id/cv_homepage"
            android:layout_below="@id/cv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_homepage"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
